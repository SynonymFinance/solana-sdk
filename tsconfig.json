{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "lib/esm",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*", "src/app.ts", "src/consts.ts"]

}
